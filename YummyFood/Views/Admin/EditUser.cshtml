@model User
<div class="container-fluid min-vh-100 mt-5">
    <div class="row h-100">
        <!-- Sidebar -->
        <div class="col-md-3 bg-light h-100">
            <div class="list-group">
                <a href="/admin" class="list-group-item list-group-item-action">Dashboard</a>
                <a href="/setting" class="list-group-item list-group-item-action active">Settings</a>
                <a href="/add-items" class="list-group-item list-group-item-action">Add Items</a>
                <a href="#" class="list-group-item list-group-item-action">Add Chef</a>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-9 d-flex align-items-center justify-content-center">
            <div class="container">
                <div class="card shadow p-4">
                    <h2 class="text-center mb-4">User Update</h2>
                    <form asp-action="Edit" asp-controller="Admin" method="post">
                        <input type="hidden" asp-for="UserId" />

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label class="form-label">User Name</label>
                                <input type="text" asp-for="UserName" class="form-control form-control-lg" required>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label class="form-label">Email</label>
                                <input type="email" asp-for="Email" class="form-control form-control-lg" required readonly>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label class="form-label">Phone</label>
                                <input type="tel" asp-for="PhoneNumber" class="form-control form-control-lg">
                            </div>

                            <div class="col-md-6 mb-4">
                                <label class="form-label">Birthday</label>
                                <input type="date" asp-for="Birthday" class="form-control form-control-lg">
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label class="form-label">Gender</label>
                                <select asp-for="Gender" class="form-select">
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label class="form-label">Role</label>
                                <select asp-for="Role" class="form-select">
                                    <option value="User">User</option>
                                    <option value="Admin">Admin</option>
                                </select>
                            </div>
                        </div>

                        <div class="mt-4 pt-2">
                            <button type="submit" class="btn btn-primary px-5 py-2">Update</button>
                            <a href="/setting" class="btn btn-secondary px-5 py-2">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 