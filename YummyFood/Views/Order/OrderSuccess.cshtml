@{
    ViewData["Title"] = "Order Success";
    Layout = "~/Views/Shared/_Layout.cshtml"; // if you're using a layout
}

<div class="custom-order-success container py-5">
    <div class="text-center">
        <img src="https://cdn-icons-png.flaticon.com/512/845/845646.png" alt="Success" width="100" class="mb-4" />
        <h2 class="text-success mb-3">Thank you for your order!</h2>
        <p class="lead">Your food is being prepared and will be served soon. 🍽️</p>

        @* Optional order ID or success message *@
        @if (ViewBag.OrderId != null)
        {
            <p class="mt-3">Your Order ID: <strong>@ViewBag.OrderId</strong></p>
        }

        <div class="mt-5">
            <a href="/order" class="btn btn-outline-primary me-2">Order More</a>
            <a href="/" class="btn btn-success">Go to Homepage</a>
        </div>
    </div>
</div>

<style>
    .custom-order-success {
        background-color: #f9fdfb;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.05);
    }
</style>
